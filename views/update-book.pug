extends layout.pug

block content
    h1 Update Book
    form(action=`/books/${id}` method="put")
        p
            label(for="title") Title
            input(type="text" name="title" value=title)#title
        p
            label(for="author") Author
            input(type="text" name="author" value=author)#author
        p
            label(for="genre") Genre
            input(type="text" name="genre" value=genre)#genre
        p
            label(for="year") Year
            input(type="text" name="year" value=year)#year
        p
            input(type="submit", value="Create New Book")
        p
            a(href="/books").button Cancel
        