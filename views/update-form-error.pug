extends layout.pug

block content
    h1 Update Book
    form(action=`/books/${id}` method="post")
        h2.error Oooops!
        ul.error
            li Author is required
            li Name is required
        p
            label(for="title") Title
            input(type="text" name="title" value=title)#title
        p
            label(for="author") Author
            input(type="text" name="author" value=author)#author
        p
            label(for="genre") Genre
            input(type="text" name="genre" value=genre)#genre
        p
            label(for="year") Year
            input(type="text" name="year" value=year)#year
        p
            input(type="submit", value="Update Book")
        p
            a(href="/books" style="float:left").button Cancel
        p
            a(href=`/books/${id}/delete` style="display:inline-block; margin-left: 10px").button Delete
        